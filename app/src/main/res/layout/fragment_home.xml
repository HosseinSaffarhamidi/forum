<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".home.HomeFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:fontFamily="@font/bold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginRight="8dp"
            android:layout_gravity="right"
            android:text="کاربران برتر"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <androidx.recyclerview.widget.RecyclerView
            android:layout_margin="8dp"
            android:id="@+id/rv_home_bestUsers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/img_home_buy1"
            android:src="@drawable/ads_one"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>



        <TextView
            android:fontFamily="@font/bold"
            android:textColor="@color/black"
            android:text="دوره های آموزشی"
            android:layout_marginRight="8dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_home_bestCourses"
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"/>


        <RelativeLayout
            android:id="@+id/rel_home_allCourse"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:foreground="?attr/selectableItemBackground"
            android:background="@drawable/shape_point"
            android:padding="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_homeFramgent_allCourses"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:text="دیدن تمام دوره های آموزشی"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/txt_homeFramgent_allCourses"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_attachment_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/img_home_buy2"
            android:src="@drawable/ads_two"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/grey300"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:fontFamily="@font/iran_bold"
                android:layout_marginRight="8dp"
                android:layout_gravity="right"
                android:text="کاربردی ترین کدها"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txt_home_seeAllCodes"
                android:layout_marginLeft="8dp"
                android:textSize="12sp"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/normal"
                android:layout_marginRight="8dp"
                android:layout_gravity="right"
                android:text="دیدن همه"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_margin="8dp"
            android:id="@+id/rv_home_bestCodes"
            android:layout_height="wrap_content"/>
    </LinearLayout>



</ScrollView>