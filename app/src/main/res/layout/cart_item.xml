<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/grey100"
    android:foreground="?attr/selectableItemBackground"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_cartItem_parent"
    android:padding="8dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_cartItem_icon"
        android:tint="@color/yellow"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_cartItem_arrow"
        app:srcCompat="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_cartItem_title"
        android:layout_marginRight="8dp"
        android:textColor="@color/black"
        tools:text="خرید ده سکه"
        android:layout_toLeftOf="@id/img_cartItem_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:id="@+id/v_cartItem"
        android:background="@color/grey300"
        android:layout_below="@id/txt_cartItem_title"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <TextView
        android:layout_marginRight="16dp"
        tools:text="با خرید این ده سکه میتوانید ده سوال فنی ب\رسید"
        android:layout_below="@id/v_cartItem"
        android:id="@+id/txt_cartItem_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/blueGreen"
        android:layout_marginLeft="8dp"
        tools:text="2000 تومان"
        android:layout_below="@id/txt_cartItem_text"
        android:id="@+id/txt_cartItem_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>