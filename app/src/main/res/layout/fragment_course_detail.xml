<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/grey100"
    android:layout_height="match_parent"
    tools:context=".home.CourseDetailFragment">


    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <ImageView
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:tint="@color/blueGreen"
                android:id="@+id/img_courseDetail_bookmark"
                app:srcCompat="@drawable/bookmark_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@id/img_courseDetail_bookmark"
                android:id="@+id/img_courseDetail_share"
                android:tint="@color/blueGreen"
                app:srcCompat="@drawable/share_variant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_gravity="right"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="16dp"
                app:civ_border_width="2dp"
                android:id="@+id/img_courseDetail_image"
                tools:src="@drawable/woman"
                app:civ_shadow_color="@color/colorPrimary"
                android:layout_alignParentRight="true"
                app:civ_border_color="@color/white"
                android:layout_width="200dp"
                android:layout_height="200dp"/>
        </RelativeLayout>


       <RelativeLayout
           android:paddingBottom="8dp"
           android:background="@color/white"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:textColor="@color/black"
               android:layout_margin="8dp"
               android:textSize="14sp"
               android:layout_alignParentRight="true"
               tools:text="دوره صفر تا صد اندروید"
               android:id="@+id/txt_courseDetail_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

           <TextView
               android:textColor="@color/colorAccent"
               android:layout_marginRight="8dp"
               android:layout_alignParentRight="true"
               tools:text="250000 تومان"
               android:layout_below="@id/txt_courseDetail_title"
               android:id="@+id/txt_courseDetail_price"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

           <TextView
               android:id="@+id/txt_courseDetail_link"
               android:layout_margin="8dp"
               android:layout_below="@id/txt_courseDetail_title"
               android:textColor="@color/colorPrimary"
               android:text="لینک دوره ( برای دیدن دوره کلیک کنید )"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>

           <TextView
               android:id="@+id/txt_courseDetail_priority"
               android:paddingLeft="8dp"
               android:paddingRight="8dp"
               android:textColor="@color/white"
               android:background="@drawable/shape_login_button"
               android:layout_below="@id/txt_courseDetail_link"
               tools:text="اولویت دوره"
               android:layout_marginLeft="8dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"/>
       </RelativeLayout>

        <View
            android:background="@color/grey300"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <TextView
            android:textColor="@color/black"
            android:background="@color/white"
            tools:text="توضیحات دوره"
            android:padding="8dp"
            android:id="@+id/txt_courseDetail_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>

</ScrollView>