<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".profile.ProfileFragment">


        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="8dp"
                android:textColor="@color/blueGreen"
                android:layout_alignParentRight="true"
                android:text="(اپلیکیشن پرسش و پاسخ)  مهندس حسین صفارحمیدی"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


    <RelativeLayout
        android:background="@color/white"
        android:id="@+id/rel_profile_profileNameFrame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:tint="@color/blueGreen"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_people_black_24dp"
            android:layout_width="wrap_content"
            android:id="@+id/img_profile_profileImage"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_profile_name"
            android:layout_marginRight="8dp"
            android:textColor="@color/blueGreen"
            android:layout_toLeftOf="@id/img_profile_profileImage"
            tools:text="حسین صفارحمیدی"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <com.google.android.material.tabs.TabLayout
        android:background="@color/white"
        app:tabTextColor="@color/grey500"
        app:tabSelectedTextColor="@color/blueGreen"
        app:tabIndicatorColor="@color/blueGreen"
        android:layout_width="match_parent"
        android:id="@+id/tab_profile"
        android:layout_height="wrap_content"/>

    <androidx.viewpager.widget.ViewPager
        android:layoutDirection="ltr"
        android:layout_width="match_parent"
        android:id="@+id/viewPager_profile"
        android:layout_height="match_parent"/>

</LinearLayout>